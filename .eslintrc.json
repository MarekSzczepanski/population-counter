{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "require-jsdoc": 0,
        "indent": [
            "error",
            4
        ],
        "prettier/prettier": [
            "warn",
            {
                "bracketSpacing": true,
                "printWidth": 140,
                "singleQuote": true,
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "auto"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "typescript": {
            "alwaysTryTypes": true
        }
    }
}